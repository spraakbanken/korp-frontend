#korp-simple(constr='SimpleSearch', constr-name='simpleSearch', ng-controller='SimpleCtrl')
  form.simple_form
    input#simple_text(type='text', ng-model='simple_text', placeholder='{{lemgramToString(placeholder)}}'
        autofocus)
    search-submit
    .opts
      span 
        |  {{'and_include' | loc}} 
      input#prefixChk(type='checkbox', ng-model="prefix") 
      label(for='prefixChk')  {{'prefix' | loc}} 
      input#suffixChk(type='checkbox', ng-model="suffix") 
      label(for='suffixChk')  {{'suffix' | loc}} 
      span  {{'and' | loc}} 
      input#caseChk(type='checkbox', ng-model="isCaseInsensitive") 
      label(for='caseChk')  {{'case_insensitive' | loc}}  

  #similar_wrapper(ng-show="relatedObj", ng-class="{open : relatedLimit == 9999}")
    button.btn.btn-small(ng-click="showAllRelated()")
      span.btn_header
        | Relaterade ord (SWE-FN)
      br
      span(ng-repeat="wd in relatedObj[0].words | limitTo:relatedDefault") 
        | {{stringifyRelated(wd)}}
        span(ng-if="!$last"), 
      br
      span(ng-repeat="wd in relatedObj[0].words.slice(relatedDefault) | limitTo:relatedDefault") 
        | {{stringifyRelated(wd)}}
        span(ng-if="!$last"), 
      span(ng-if="relatedObj[0].words.length > relatedDefault || relatedObj.length > 1")...




